{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": [
      "../../node_modules/@types",
      "src/backendTypes"
    ],
    "outDir": "./dist",
    "rootDir": "src",
    "baseUrl": "src",
    "moduleResolution": "node",
    "strict": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "module": "commonjs",
    "declaration": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "resolveJsonModule": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.html"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": false,
  // references required for monorepo to work
  "references": [
    {
      "path": "../common"
    }
  ]
}